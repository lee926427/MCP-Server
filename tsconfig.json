{
    "compilerOptions": {
      "target": "ES2022",
      "allowImportingTsExtensions": true,
      "emitDeclarationOnly": true,
      "declaration": true,
      "module": "ES2022",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@/*": [ "./src/*" ]
      }
    },
    "include": ["**/*.ts", "**/*.d.ts"],
    "exclude": ["node_modules"]
}